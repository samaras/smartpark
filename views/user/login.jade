extends ../layout
    
block content
    .clearfix
    .container
        if(error)
         .alert-info.alert
            a.close(href="#") Ã—
            p #{error}
        .panel.panel-default
            .panel-heading 
                h3 Login
            .panel-body
                div
                    form.form-horizontal(role="form", method="POST")
                        h2.heading Please sign in
                        input(type='hidden', name='_csrf', value=token)
                        .row
                            .control-group.col-lg-3
                                label(for="user[email]", class="control-label") Username:
                                input.form-control(type="text" placeholder="Username", required="required", autofocus="autofocus", name="username")
                        .row
                            .control-group.col-lg-3
                                label(for="user[email]", class="control-label") Password:
                                input.form-control(type="password", placeholder="Password", required="required", name="password")
                        .row
                            .control-group.col-lg-3
                                label.checkbox Remember Me
                                    input.form-control(type="checkbox", value="remember-me")
                        .row
                            .control-group.col-lg-3
                                button.btn.btn-m.btn-primary.btn-block(type="submit") Sign in
                        .row
                            .control-group.col-lg-3
                                a(href="/forgot") Forgot Password

