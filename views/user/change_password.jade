extends ../layout

block content
    .container
        -if(errors.length > 0)
            .alert-danger.alert
                a.close(href="#") ×
                p #{errors}
        -if(message.length > 0)
            .alert-info.alert
                a.close(href="#") ×
                p #{message}
        h3.form-signin-heading Password Change
        .panel.panel-default
            .panel-body
                div.form-group
                    form(role="form", method="post", class="form-signin form-horizontal")
                        input(type='hidden', name='_csrf', value=token)
                        .row
                            .control-group.col-lg-3
                                label(for="old_password", class="control-label") Old Password:
                                .controls
                                    input.form-control(name="old_password", type="password" placeholder="Old Password", required, data-required-msg='Old Password is required')
                        .row
                            .control-group.col-lg-3
                                label(for="password",  class="control-label") New Password:
                                .controls
                                    input.form-control(name="password", type="password", placeholder="Password", required, data-required-msg='Password is required')
                        .row
                            .control-group.col-lg-3
                                label(for="repeat_password",  class="control-label") Repeat Password:
                                .controls
                                    input.form-control(name="repeat_password", type="password", placeholder="Repeat Password", required, data-required-msg='Please repeat password is required')
                        .row
                            .control-group.col-lg-3
                                .controls
                                    hr    
                                    button.btn.btn-m.btn-primary.btn-block(type="submit", style="width: 150px") Update Password
